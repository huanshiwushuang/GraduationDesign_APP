<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:MyBg="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#c1ffff"
    android:orientation="vertical" >

    <com.guohao.custom.MyBg
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        MyBg:text01="用户ID："
        MyBg:text02="" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#fff" />

    <com.guohao.custom.MyBg
        android:id="@+id/id_mybg_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        MyBg:text01="用户昵称："
        MyBg:text02="@string/change_text" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#fff" />

    <com.guohao.custom.MyBg
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        MyBg:text01="注册时间："
        MyBg:text02="" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#fff" />

    <com.guohao.custom.MyBg
        android:id="@+id/id_mybg_user_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        MyBg:text01="用户密码：登录时，通过忘记密码修改"
        MyBg:text02="@string/change_text" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#fff" />

    <com.guohao.custom.MyBg
        android:id="@+id/id_mybg_load_pic_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        MyBg:text01="图片大小：大"
        MyBg:text02="@string/change_text" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#fff" />

    <com.guohao.custom.MyBg
        android:id="@+id/id_mybg_play_quality"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        MyBg:text01="播放质量："
        MyBg:text02="@string/change_text" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#fff" />

</LinearLayout>