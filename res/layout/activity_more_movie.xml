<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#c1ffff"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/id_textview_more_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#6bfafa"
        android:gravity="center_vertical"
        android:paddingLeft="8dp" />

    <com.guohao.custom.LoadMore
        android:id="@+id/id_loadmore"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <ListView
            android:id="@+id/id_listview_more_movie"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbarSize="3dp"
            android:scrollbarThumbVertical="@color/scrollBar" >
        </ListView>
    </com.guohao.custom.LoadMore>

</LinearLayout>